@model CreateStoreViewModel

@{
    ViewData["Title"] = "Create Store";
    var managerList = ViewBag.ManagerList;
}

@*to support file upload set enctype="multipart/form-data"*@
<form enctype="multipart/form-data" asp-action="CreateStore" method="post" class="mt-3">
    <div class="createStore">
        <div asp-validation-summary="All" class="text-danger">
        </div>
        <div class="form-group row">
           @* <label asp-for="StoreName" class="col-sm-3 col-lg-2 col-form-label"></label>*@
            <label class="col-sm-3 col-lg-2 col-form-label">Ime radnje</label>
            <div class="col-sm-9 col-lg-10">
                <input asp-for="StoreName" class="form-control" placeholder="Ime radnje">
                <span asp-validation-for="StoreName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            @*<label asp-for="StoreDescription" class="col-sm-3 col-lg-2 col-form-label"></label>*@
            <label class="col-sm-3 col-lg-2 col-form-label">Opis radnje</label>
            <div class="col-sm-9 col-lg-10">
                <input asp-for="StoreDescription" class="form-control" placeholder="Opis radnje">
                <span asp-validation-for="StoreDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
          @*  <label asp-for="StoreAddress" class="col-sm-3 col-lg-2 col-form-label"></label>*@
            <label class="col-sm-3 col-lg-2 col-form-label">Adresa</label>
            <div class="col-sm-9 col-lg-10">
                <input asp-for="StoreAddress" class="form-control" placeholder="Adresa">
                <span asp-validation-for="StoreAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
           @* <label asp-for="Telephone" class="col-sm-3 col-lg-2 col-form-label"></label>*@
            <label class="col-sm-3 col-lg-2 col-form-label">Telefonski broj</label>
            <div class="col-sm-9 col-lg-10">
                <input asp-for="Telephone" class="form-control" placeholder="Telefonski broj">
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
           @* <label asp-for="ZipCodeAndCity" class="col-sm-3 col-lg-2 col-form-label"></label>*@
            <label class="col-sm-3 col-lg-2 col-form-label">Poštanski broj i grad</label>
            <div class="col-sm-9 col-lg-10">
                <input asp-for="ZipCodeAndCity" class="form-control" placeholder="Poštanski broj i grad">
                <span asp-validation-for="ZipCodeAndCity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="WebSite" class="col-sm-3 col-lg-2 col-form-label"></label>
            <div class="col-sm-9 col-lg-10">
                <input asp-for="WebSite" class="form-control" placeholder="Web Site">
                <span asp-validation-for="WebSite" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
           @* <label asp-for="Photo" class="col-sm-3 col-lg-2 col-form-label"></label>*@
            <label class="col-sm-3 col-lg-2 col-form-label">Slika radnje</label>
            <div class="col-sm-9 col-lg-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input">
                    <label class="custom-file-label">Izaberite sliku radnje...</label>
                </div>
            </div>
        </div>
        <div class="form-group row">
           @* <label asp-for="ManagerEmail" class="col-sm-3 col-lg-2 col-form-label"></label>*@
            <label class="col-sm-3 col-lg-2 col-form-label">Menadžer radnje</label>
            <div class="col-sm-9 col-lg-10">
                <select asp-for="ManagerEmail" class="custom-select mr-sm-2" asp-items="@(new SelectList(managerList))">
                    <option value="">Izaberite menadžera radnje</option>
                </select>
                <span asp-validation-for="ManagerEmail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
           @* <label asp-for="DeliveryShippingMethod" class="col-sm-3 col-lg-2 col-form-label">BufferTime for Delivery Shipping Method</label>*@
            <label class="col-sm-3 col-lg-2 col-form-label">Vreme čekanja isporuke</label>
            <div class="col-sm-9 col-lg-10">
                <input asp-for="DeliveryShippingMethod" class="form-control" placeholder="Vreme čekanja isporuke">
                <span asp-validation-for="DeliveryShippingMethod" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
           @* <label asp-for="PickupShippingMethod" class="col-sm-3 col-lg-2 col-form-label"></label>*@
            <label class="col-sm-3 col-lg-2 col-form-label">Vreme čekanja prilikom ličnog preuizmanja</label>
            <div class="col-sm-9 col-lg-10">
                <input asp-for="PickupShippingMethod" class="form-control" placeholder="Vreme čekanja prilikom ličnog preuizmanja">
                <span asp-validation-for="PickupShippingMethod" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto">
                    Kreiraj radnju
                </button>
            </div>
        </div>
    </div>
</form>


<style>

    @@media only screen and (min-width: 774px) {
        .createStore {
            width: 100%;
        }
    }


    @@media only screen and (max-width: 774px) {
        .createStore {
            width: 100%;
        }
    }
</style>

@*This script is required to display the selected file in the file upload element*@

@section Scripts {

    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/myHub.js"></script>
    <script src="~/js/slideshow.js"></script>
    <script src="~/js/slideshowTimeChange.js"></script>
    <script src="~/js/navigateToProductsPage.js"></script>
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}


