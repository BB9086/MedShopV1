@model CreateProductViewModel

@{
    ViewData["Title"] = "Create Store";
    var storeId = ViewBag.StoreId;
    var categoriesList = ViewBag.CategoriesList;
}

@*to support file upload set enctype="multipart/form-data"*@
<form enctype="multipart/form-data" asp-action="CreateProduct" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    @{
        if (categoriesList.Count != 0)
        {
            <input type="checkbox" class="radio" name="btnCheckBox" value="NewCategory" id="NewCategory" checked /><label>Nova kategorija</label>
            <input id="txt_NewCategory" name="txt_NewCategory" hidden />
            <br />
            

            <div class="form-group row">
                <div class="col-sm-3 col-lg-2">
                    <input type="checkbox" class="radio" name="btnCheckBox" value="ExistingCategory" id="ExistingCategory" /><label>Postojeća kategorija</label>
                </div>
                
                <div class="col-sm-9 col-lg-10">
                    <select id="txt_ExistingCategory" name="txt_ExistingCategory" class="custom-select mr-sm-2" asp-items="@(new SelectList(categoriesList))">
                        @*<option value="">Please select Category</option>*@
                    </select>
                </div>
            </div>
        }
        else
        {
            <input type="checkbox" class="radio" name="btnCheckBox" value="NewCategory" id="NewCategory" checked /><label>Nova kategorija</label>
            <input id="txt_NewCategory" name="txt_NewCategory" hidden />

        }


    }



    <div class="form-group row">

        <input asp-for="StoreType" class="form-control" value="@storeId" hidden>

    </div>

    <div class="form-group row">
        <label class="col-sm-3 col-lg-2 col-form-label" id="lblNewCategory">Nova kategorija</label>
        <div class="col-sm-9 col-lg-10">
            <input asp-for="CategoryName" class="form-control" placeholder="Ime kategorije">
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        @*<label asp-for="ProductName" class="col-sm-3 col-lg-2 col-form-label"></label>*@
        <label class="col-sm-3 col-lg-2 col-form-label">Ime proizvoda</label>
        <div class="col-sm-9 col-lg-10">
            <input asp-for="ProductName" class="form-control" placeholder="Ime proizvoda">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
      @*  <label asp-for="QuantityOfProduct" class="col-sm-3 col-lg-2 col-form-label"></label>*@
        <label class="col-sm-3 col-lg-2 col-form-label">Težina proizvoda</label>
        <div class="col-sm-9 col-lg-10">
            <input asp-for="QuantityOfProduct" class="form-control" placeholder="Težina proizvoda">
            <span asp-validation-for="QuantityOfProduct" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        @*<label asp-for="TotalQuantity_Kg" class="col-sm-3 col-lg-2 col-form-label"></label>*@
        <label class="col-sm-3 col-lg-2 col-form-label">Ukupna količina</label>
        <div class="col-sm-9 col-lg-10">
            <input asp-for="TotalQuantity_Kg" class="form-control" placeholder="Ukupna količina u magacinu (kg)">
            <span asp-validation-for="TotalQuantity_Kg" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
      @*  <label asp-for="Price" class="col-sm-3 col-lg-2 col-form-label"></label>*@
        <label class="col-sm-3 col-lg-2 col-form-label">Cena</label>
        <div class="col-sm-9 col-lg-10">
            <input asp-for="Price" class="form-control" placeholder="Cena">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
       @* <label asp-for="CurrentPrice" class="col-sm-3 col-lg-2 col-form-label"></label>*@
        <label class="col-sm-3 col-lg-2 col-form-label">Trenutna cena</label>
        <div class="col-sm-9 col-lg-10">
            <input asp-for="CurrentPrice" class="form-control" placeholder="Trenutna cena">
            <span asp-validation-for="CurrentPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
      @*  <label asp-for="Producer" class="col-sm-3 col-lg-2 col-form-label"></label>*@
        <label class="col-sm-3 col-lg-2 col-form-label">Proizvođač</label>
        <div class="col-sm-9 col-lg-10">
            <input asp-for="Producer" class="form-control" placeholder="Proizvođač">
            <span asp-validation-for="Producer" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
       @* <label asp-for="Photo" class="col-sm-3 col-lg-2 col-form-label"></label>*@
        <label class="col-sm-3 col-lg-2 col-form-label">Slika proizvoda</label>
        <div class="col-sm-9 col-lg-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input">
                <label class="custom-file-label">Izaberite sliku...</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
       @* <label asp-for="Place" class="col-sm-3 col-lg-2 col-form-label"></label>*@
        <label class="col-sm-3 col-lg-2 col-form-label">Lokacija</label>
        <div class="col-sm-9 col-lg-10">
            <input asp-for="Place" class="form-control" placeholder="Lokacija proizvođača">
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
       @* <label asp-for="ProductDescription" class="col-sm-3 col-lg-2 col-form-label"></label>*@
        <label class="col-sm-3 col-lg-2 col-form-label">Opis proizvoda</label>
        <div class="col-sm-9 col-lg-10">
            <input asp-for="ProductDescription" class="form-control" placeholder="Opis proizvoda">
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
               Kreiraj proizvod
            </button>
        </div>
    </div>
</form>


@*This script is required to display the selected file in the file upload element*@

@section Scripts {

    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/myHub.js"></script>
    <script src="~/js/slideshow.js"></script>
    <script src="~/js/slideshowTimeChange.js"></script>
    <script src="~/js/navigateToProductsPage.js"></script>
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });


            var checkedId = $('input:checked').attr('id');

            $('#txt_ExistingCategory').attr("disabled", true);

            $("input:checkbox").on('click', function () {
                // in the handler, 'this' refers to the box clicked on
                var $box = $(this);
                checkedId = $(this).attr('id');

                if ($box.is(":checked")) {
                  
                    var group = "input:checkbox[name='" + $box.attr("name") + "']";
                   
                    $(group).prop("checked", false);
                    $box.prop("checked", true);
                } else {
                    $box.prop("checked", false);
                }


                if ($('#NewCategory').is(":checked")) {
                    $('#lblNewCategory').show();
                    $('#CategoryName').show();
                    $('#CategoryName').val("");


                    $('#txt_ExistingCategory').attr("disabled", true);

                }

                if ($('#ExistingCategory').is(":checked")) {

                    $('#lblNewCategory').hide();
                    $('#CategoryName').hide();

                    $('#txt_ExistingCategory').attr("disabled", false);

                    $('#txt_ExistingCategory').on("change", function () {

                        $('#CategoryName').val($('#txt_ExistingCategory :selected').text());

                    });

                    $('#CategoryName').val($('#txt_ExistingCategory :selected').text());
                }
            });



        });
    </script>
}